// Load custom styles
@import './spectre/spectre.styl'
@import './spectre/spectre-exp.styl'
@import './spectre/spectre-icons.styl'

// Highlight.js
@import './highlight.js/monokai-sublime.styl'

// vue2-perfect-scrollbar
// @import './vue2-perfect-scrollbar/vue2-perfect-scrollbar.styl'

code.hljs
  display inline

.tooltip-click:hover::after
  opacity 0

.tooltip-click:focus::after,
.tooltip-click:active::after
  opacity: 1;
  transform: translate(-50%, -.2rem);

// Fix documentation style issues caused by spectre overriden.
h1, .h1
  font-size 1.8rem

h2, .h2
  font-size 1.3rem

h3, .h3
  font-size 1.1rem

h4, .h4
  font-size 1rem

h5, .h5
  font-size 1rem

h6, .h6
  font-size 0.8rem

h1, h2, h3, h4, h5, h6
  font-family $titleFontFamily

ul
  list-style: disc outside

code, kbd, .line-number
  font-family source-code-pro, Menlo, Monaco, Consolas, "Courier New", monospace

small
  a
    font-size 80% !important
    font-weight 400

.avatar[data-initial]::before
  pointer-events: none;

// Global overriden.
.text-warning
  color #e8bb49

.bg-warning
  background-color #e8bb49 !important

.menu .menu-item
  a, >a, input, .form-select, .form-switch
    font-size 0.7rem
  .form-switch
    margin-left 0.4rem

// Page layout.
main
  padding $navbarHeight 0 0
  max-width $pageWidth
  margin 0 auto

  .sideview
    section
      margin-bottom 0.5rem

  &.page
    padding-top 0

@media (min-width: $MQMobileNarrow)
  main
    &.applayout
      max-width 100%

      .sideview
        .scroll-area
          position fixed
          top $navbarHeight
          left 0
          bottom 0
          overflow-y auto
          width $sideContainerWidth
          padding-top 0.2rem

      .mainview
        padding-top 0.2rem
        padding-left $sideContainerWidth

      .contentview
        .scroll-area
          position fixed
          top $navbarAndBreadcrumbHeight
          left $sideContainerWidth
          right 0
          bottom 0
          // width $sideContainerWidth
          // padding-top 0.2rem

      // To be removed
      .main-container
        padding-top 0.2rem
        padding-left $sideContainerWidth

@media (max-width: $MQMobileNarrow)
  main
    max-width 100%
    margin 0
    overflow-x hidden

    .sideview
      margin-top 1.15rem

.theme-default-content
  font-size 15px
  &:not(.custom)
    padding 1rem
    > h1:first-child
      margin-top 0
  p
    margin-block-start 1em
    margin-block-end 1em
    margin-inline-start 0
    margin-inline-end 0

.breadcrumbview
  margin-bottom 0.8rem
  .breadcrumb-item, .breadcrumb-item a
    font-size 0.7rem

// To be removed
.breadcrumb-container
  margin-bottom 0.8rem

.hide
  display none

.sidebar
  .sidebar-link
    text-decoration none
    &:focus
      box-shadow none
    &:visited
      color $textColor
    &.active
      color $accentColor
  .sidebar-links
    li
      margin-top 0rem !important
    li
      a
        &.sidebar-link
          font-size 0.8rem !important
          line-height 1.5 !important
  .sidebar-sub-headers
    li
      margin-top 0
      a
        &.sidebar-link
          font-size 0.7rem !important

.page-edit
  padding-left 1rem !important
  padding-right 1rem !important
.page-nav
  padding-left 1rem !important
  padding-right 1rem !important

.tile .tile-title
  margin-top 0 !important

.avatar:not(.custom)
  background #eee

.pkg-sm
  .pkg-title
    margin 0 0 0.3rem 0
    a::before
      content "ðŸ“¦ "

.form-group
  .form-label
    &.required:after
      content " *"
      color $accentColor
